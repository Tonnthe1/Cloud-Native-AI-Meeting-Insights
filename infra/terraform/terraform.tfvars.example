# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your deployment

# Basic Configuration
aws_region    = "us-west-2"
environment   = "dev"
cluster_name  = "meeting-insights"

# EKS Configuration
cluster_version        = "1.28"
node_instance_types    = ["t3.medium"]
node_desired_capacity  = 2
node_max_capacity      = 4
node_min_capacity      = 1

# Database Configuration (cost-optimized for testing)
db_instance_class     = "db.t3.micro"    # Free tier eligible
db_allocated_storage  = 20               # Minimum for gp2
db_name              = "meeting_insights"
db_username          = "meetinguser"

# Redis Configuration
redis_node_type = "cache.t3.micro"       # Cost-effective for testing

# Networking (optional - leave empty to allow all)
allowed_cidr_blocks = []  # Example: ["1.2.3.4/32"] to restrict access

# Tags
tags = {
  Owner       = "DevOps"
  Purpose     = "Meeting Insights Demo"
  Environment = "dev"
  Project     = "cloud-native-ai"
}